<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:navigationIcon="@drawable/ic_back" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="38dp"
        android:layout_marginTop="51dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtNameCategory"
            android:layout_gravity="center_horizontal"
            android:autofillHints="Sữa hạt"
            android:background="@drawable/edit_text_border"
            android:hint="Tên danh mục"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtNameCategory"
            android:text="Tên danh mục"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="62dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="153dp"
            android:inputType="text"
            android:id="@+id/edtDesCategory"
            android:layout_gravity="center_horizontal"
            android:autofillHints="Sữa hạt"
            android:background="@drawable/edit_text_border"
            android:hint="Mô tả danh mục"
            android:layout_marginTop="10dp"
            android:maxLines="10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtDesCategory"
            android:text="Mô tả danh mục"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_huy"
            app:backgroundTint="@null"
            android:backgroundTint="#264653"
            android:background="@drawable/button_border"
            android:text="@string/btn_huy"
            android:textSize="16sp"/>
        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/btn_luu"
            app:backgroundTint="@null"
            android:backgroundTint="#2A9D8F"
            android:background="@drawable/button_border"
            android:text="@string/btn_luu"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>