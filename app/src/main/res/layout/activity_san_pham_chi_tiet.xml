<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:navigationIcon="@drawable/ic_back" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp"
        android:layout_marginTop="14dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtIdCategory"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:background="@drawable/edit_text_border"
            android:hint="DMDA001"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtIdCategory"
            android:text="Mã danh mục"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:id="@+id/edtIdProduct"
            android:layout_gravity="center_horizontal"
            android:autofillHints="SPA001"
            android:background="@drawable/edit_text_border"
            android:hint="SPA001"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtIdProduct"
            android:text="Mã sản phẩm"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtNameProduct"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:background="@drawable/edit_text_border"
            android:hint="DMDA001"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtNameProduct"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtPrice"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:background="@drawable/edit_text_border"
            android:hint="DMDA001"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtPrice"
            android:text="Giá sản phẩm"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtQuantity"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:background="@drawable/edit_text_border"
            android:hint="DMDA001"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtQuantity"
            android:text="Số lượng sản phẩm"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="18dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtDonViTinh"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:background="@drawable/edit_text_border"
            android:hint="DMDA001"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtDonViTinh"
            android:text="Đơn vị tính"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp">
        <EditText
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:id="@+id/edtMoTa"
            android:enabled="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:layout_gravity="center_horizontal"
            android:autofillHints="DMDA001"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/white"
            android:layout_alignTop="@+id/edtMoTa"
            android:text="Mô tả"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/text_label"/>
    </RelativeLayout>
</LinearLayout>